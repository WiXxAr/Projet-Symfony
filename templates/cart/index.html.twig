{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th> Produit</th>
                    <th> Prix </th>
                    <th> Quantit√© </th>
                    <th> Total </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
            {%for item in items %}
                <tr>
                    <td> {{ item.produit.Libelle }}</td>
                    <td> {{ item.produit.Prix }} </td>
                    <td> {{ item.quantite }} </td>
                    <td> {{ item.produit.Prix * item.quantite }} </td>
                    <td>
                        <a href="{{ path('cart_delete', {'id': item.produit.id}) }}" class="btn btn-danger btn-sm">
                            Supprimer du panier
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan ="3" class="text-right"> Total : </td>
                <td>{{ total }}</td>
            </tr>
            </tfoot>
        </table>
    {% else %}
        <p> Panier vide</p>
    {% endif %}
{% endblock %}
